{
  "name": "csc-307-app",
  "version": "1.0.0",
  "description": "To run the front end, run `npm run dev` from root",
  "homepage": "https://github.com/dash-org/csc_307_group_project#readme",
  "bugs": {
    "url": "https://github.com/dash-org/csc_307_group_project/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dash-org/csc_307_group_project.git"
  },
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "npm run test:backend --prefix packages/jest-unit-testing",
    "frontend": "npm run dev --workspace react-frontend",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "npx eslint . && npx prettier --check .",
    "lint-fix": "eslint . --fix",
    "start": "node backend_with_db.js",
    "backend": "npm run dev --workspace express-backend",
    "test:workflow": "bash -c 'npm run backend & B1=$!; sleep 2; npm test; EC=$?; kill -INT $B1 2>/dev/null || true; kill -TERM $B1 2>/dev/null || true; kill -KILL $B1 2>/dev/null || true; exit $EC'"
  },
  "jest": {
    "transform": {}
  },
  "jest-junit": {
    "outputDirectory": "reports/junit",
    "outputName": "jest-unit.xml"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "jsonwebtoken": "^9.0.2",
    "react-router-dom": "^7.9.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "jest-github-actions-reporter": "^1.0.3",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
